<section>
    <div class="container-fluid view-option-table" style="padding-left: 90px;">
        <div class="row">
            <div class="d-flex justify-content-start" style="background-color:rgb(255, 255, 255) ; color: var(--secondary); padding: 6px 4px 0 10px;">
                    <h4 style="overflow: hidden;">All Products</h4>
            </div>
            <table id="adminPageProdTable" class="display" cellspacing="0" width="100%">
                
                <thead>
                    <tr style="background-color: var(--secondary-li);">
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Price</th>
                        <th scope="col">Category</th>
                        <th scope="col">Options</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each products}}
                   
                    <tr style="background-color: var(--secondary-white);">
                        <td data-label="Image"><img src="/images/product-images/{{this._id}}.{{imageExt}}" alt=""
                                style="width: 60px; height: auto;"></td>
                        <td data-label="Name" id="Name">{{this.Name}}</td>
                        <td data-label="Description">{{this.Description}}</td>
                        <td data-label="Price" id="Price">â‚¹.{{this.Price}}</td>
                        <td data-label="Category" id="Category">{{this.Category}}</td>
                        <td data-label="Options"><a href="/admin/edit-product?id={{this._id}}" class="btn btn-warning"
                                style="font-size: medium; padding: 4px 12px; color: black;">Edit</a>
                        <a href="/admin/remove-product?id={{this._id}}" onclick="return confirm('are you want to delete {{this.Name}}?')" class="btn btn-danger" id="productRemove"
                                style="font-size: medium; padding: 4px 12px; color: black;" >Remove</a>
                        </td>
                    </tr>
                   
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>

<script>
    $(function(){
$('#adminPageProdTable').DataTable();
});
</script>
