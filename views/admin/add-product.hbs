<section>
    <div class="container-fluid" style="padding-left: 90px;">
        <div class="row d-flex justify-content-center" style="padding: 10px 0px 10px 10px;">
            <div class="col-12 col-md-8">
                <form class="needs-validation" action="/admin/add-product" method="post" enctype="multipart/form-data">
                    <div style="display: flex; align-items: baseline;">
                        <label for="" class="">Name</label><span class="text-success" style="font-size: 12px;">(Product
                            full name)</span>
                    </div>
                    <input class="form-control mt-2 mb-2" type="text" aria-label="default input example" name="Name"
                        required>

                    <div style="display: flex; align-items: baseline;">
                        <label for="" class="">Price</label><span class="text-success" style="font-size: 12px;">(current
                            price)</span>
                    </div>
                    <input class="form-control mt-2 mb-2" type="text" aria-label="default input example" name="Price"
                        required>

                    <div style="display: flex; align-items: baseline;">
                        <label for="" class="">Description</label><span class="text-success"
                            style="font-size: 12px;">(Description about the product)</span>
                    </div>
                    <input class="form-control mt-2 mb-2" type="text" aria-label="default input example"
                        name="Description" required>



                    <div class="mb-3 mt-2">
                        <span class="text-success" style="font-size: 12px;"> choose a good quality transperent image for
                            better output</span><br>
                        <label for="formFile" class="form-label">Select image : </label>
                        <img src="" alt=".."
                            style="width: 100px; height: auto; border: 1px solid #33333338; margin-left: 20px;"
                            id="imageView">
                        <input class="form-control mt-2" type="file" id="formFile" name="Image"
                            onchange="viewImage(event)" required>
                    </div>


                    <div style="display: flex; align-items: baseline;">
                        <label for="" class="">Choose image extension</label><span class="text-success"
                            style="font-size: 12px;"> (choose png format for better result)</span>
                    </div>
                    <div class="form-check form-switch mt-2">
                        <input class="form-check-input mt-2" type="radio" role="switch" name="imageExt" value="jpg"
                            required>
                        <label class="form-check-label mt-2" for="flexSwitchCheckDefault">JPG</label>
                    </div>
                    <div class="form-check form-switch mt-2 mb-3">
                        <input class="form-check-input" type="radio" role="switch" name="imageExt" value="png" required>
                        <label class="form-check-label" for="flexSwitchCheckChecked">PNG</label>
                    </div>


                    <div style="display: flex; align-items: baseline;">
                        <label for="" class="">Choose a category</label><span class="text-success"
                            style="font-size: 12px;">(click any of category button)</span>
                    </div>
                    {{#each categories}}
                    <input type="radio" class="btn-check" name="Category" id="categ{{this._id}}" autocomplete="off"
                        value="{{this.category}}" required>
                    <label class="btn btn-outline-dark me-3 mt-3" for="categ{{this._id}}"
                        style="font-size: smaller;">{{this.category}}</label>
                    {{/each}}
                    <br>

                    <p class="mt-3" style="font-size: 14px;">If you want to create new Category <a
                            href="/admin/add-new-category">click here</a></p>




                    <div style="width: 100%; display: flex; justify-content: center;">
                        <button type="submit" class="btn btn-dark" style="font-size: 14px;">Add Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>