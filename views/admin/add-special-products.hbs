<section>
    <div class="container-fluid" style="padding-left: 90px;">
        <div class="row d-flex justify-content-center" style="padding: 10px 0px 10px 10px;">
            <div class="col-12 col-md-6">
                <form action="/admin/add-special-products" method="post" enctype="multipart/form-data">

                    <label for="" class="mt-2">Name</label>
                    <input class="form-control mt-2" type="text" aria-label="default input example" name="name"
                        required>

                    <label for="" class="mt-2">Right price</label>
                    <input class="form-control mt-2" type="text" aria-label="default input example" name="rightPrice"
                        required>

                    <label for="" class="mt-2">Current price</label>
                    <input class="form-control mt-2" type="text" aria-label="default input example" name="currentPrice"
                        required>

                    <label for="" class="mt-2">Offer</label>
                    <input class="form-control mt-2" type="text" aria-label="default input example" name="offer"
                        required>

                    <label for="" class="mt-2">Description</label>
                    <input class="form-control mt-2 mb-3" type="text" aria-label="default input example"
                        name="description" required>

                    <p style="font-weight: 300;">Image size <span style="font-weight: 500;"> 1280 : 720 </span>for best
                        result</p>
                    <div class="mb-3 mt-2">
                        <label for="formFile" class="form-label">Select image </label>
                        <img src="/images/product-images/{{products._id}}.{{ext}}" alt=""
                            style="width: 80px; height: auto; margin-left: 20px;" id="imageView">
                        <input class="form-control mt-3" type="file" id="formFile" name="Image"
                            onchange="viewImage(event)">
                    </div>

                    <p style="font-weight: 300;">Choose a full screen image without transperensy for best result</p>

                    <label for="" class="mt-2">Choose image extension</label>

                    <div class="form-check form-switch mt-2">
                        <input class="form-check-input mt-2" type="radio" role="switch" name="imageExt" value="jpg">
                        <label class="form-check-label mt-2">JPG</label>
                    </div>
                    <div class="form-check form-switch mt-2">
                        <input class="form-check-input mt-2" type="radio" role="switch" name="imageExt" value="jpeg">
                        <label class="form-check-label mt-2">JPEG</label>
                    </div>
                    <div class="form-check form-switch mt-2 mb-3">
                        <input class="form-check-input" type="radio" role="switch" name="imageExt" value="png">
                        <label class="form-check-label">PNG</label>
                    </div>

                    <div style="width: 100%; display: flex; justify-content: center;">
                        <button type="submit" class="btn btn-primary ">ADD</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>