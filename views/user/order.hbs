<section>
    <div class="container order-container" style="padding-left: 84px;">
        <div class="py-5 text-center">
            <i style="font-size: 30px;" class="bi bi-cart4"></i>
            <p style="font-size: 12px;" class="lead">your data is protected <i style="color: rgb(10, 164, 10);" class="bi bi-lock"></i></p>
        </div>
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted overflow-hidden">Your cart</span>
                    <span class="badge badge-secondary badge-pill">3</span>
                </h4>
                <ul class="list-group mb-3 sticky-top">
                    {{#each products}}
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">{{this.product.Name}}</h6>
                            <small class="text-muted">Quantity:{{this.quantity}}</small>
                        </div>
                        <span class="text-muted">₹.{{this.product.Price}}</span>
                    </li>
                    {{/each}}
                    
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total (INR)</span>
                        <strong>₹.<span>{{total}}</span></strong>
                    </li>
                </ul>
                
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3 overflow-hidden">Billing address</h4>
                <form id="checkout-form" class="needs-validation" novalidate="">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">Name</label>
                            <input type="text" class="form-control" id="firstName" name="Name" placeholder="" value="" required="">
                            <input type="text" class="form-control" id="userId" name="userId" value="{{user._id}}" hidden>
                            <div class="invalid-feedback"> Valid first name is required. </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Mobile">Mobile number</label>
                            <input type="text" class="form-control" id="Mobile" name="Mobile" placeholder="" value="" required="">
                            <div class="invalid-feedback"> Valid Mobile number is required. </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="Pincode">Pincode</label>
                        <input type="text" class="form-control" id="Pincode" name="Pincode" placeholder="* * * * * *" required="">
                        <div class="invalid-feedback"> Please enter a valid Pincode </div>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email </label>
                        <input type="email" class="form-control" id="email" name="Email" placeholder="you@example.com" required="">
                        <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                    </div>
                    <div class="mb-3">
                        <label for="address">Address</label>
                        <input type="text" class="form-control" id="address" name="Address" placeholder="1234 Main St" required="">
                        <div class="invalid-feedback"> Please enter your shipping address. </div>
                    </div>
                    <div class="mb-3">
                        <label for="address2">Landmark <span class="text-muted">(Optional)</span></label>
                        <input type="text" class="form-control" id="address2" name="Landmark" placeholder="Apartment or suite">
                    </div>
                    <div class="row">
                        
                        <div class="col-md-4 mb-3">
                            <label for="state">State</label>
                            <select class="custom-select d-block w-100" id="state" name="State" required="">
                                <option value="">Choose...</option>
                                <option value="Kerala">Kerala</option>
                                <option value="Karnadaka">Karnadaka</option>
                            </select>
                            <div class="invalid-feedback"> Please provide a valid state. </div>
                        </div>
                        <div class="col-md-5 mb-3">
                            <label for="Branch">Branch</label>
                            <select class="custom-select d-block w-100" id="Branch" name="Branch" required="">
                                <option>Choose...</option>
                                <option value="Kochi">Kochi</option>
                                <option>Calicut</option>
                                <option>Thirivananthapuram</option>
                                <option>Bangalore</option>
                            </select>
                            <div class="invalid-feedback"> Please select a valid country. </div>
                        </div>
                        
                    </div>
                    
                    <hr class="mb-4">
                    <h4 class="mb-3 overflow-hidden">Payment</h4>
                    <div class="d-block my-3">
                        <div class="custom-control custom-radio d-flex align-center">
                            <input id="cod" name="paymentMethod" value="COD" type="radio" class="custom-control-input" checked="" required="">
                            <label class="custom-control-label ms-2" for="cod">Cash on delivery</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-center">
                            <input id="online-pay" name="paymentMethod" value="OPM" type="radio" class="custom-control-input" required="">
                            <label class="custom-control-label ms-2" for="online-pay">Online payment</label>
                        </div>
                        
                    </div>
                    <hr class="mb-4">
                    <div class="mb-3">
                        <label for="Desired-date">Expected date</label>
                        <input type="date" class="form-control" id="Desired-date" name="ExceptedDate"> 
                        <input type="text" class="form-control" id="current-date" name="currentDate" hidden> 
                    </div>
                    <div class="mb-3">
                        <label for="Desired-time">Expected time</label>
                        <input type="time" class="form-control" id="Desired-time" name="ExceptedTime" required=""> 
                    </div>
                    <div class="custom-control custom-checkbox  d-flex align-center">
                        <input type="checkbox" class="custom-control-input" id="same-address">
                        <label class="custom-control-label ms-2" for="same-address">Shipping address is the same as my billing address</label>
                    </div>
                    <div class="custom-control custom-checkbox  d-flex align-center">
                        <input type="checkbox" class="custom-control-input" id="save-info">
                        <label class="custom-control-label ms-2" for="save-info">Save this information for next time</label>
                    </div>
                    
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Continue to checkout</button>
                </form>
            </div>
        </div>
        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">© 2020-2024 Watermelon team</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="#">Privacy</a></li>
                <li class="list-inline-item"><a href="#">Terms</a></li>
                <li class="list-inline-item"><a href="#">Support</a></li>
            </ul>
        </footer>
    </div>
</section>