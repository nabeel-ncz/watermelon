<section>
    <div class="container-fluid" style="padding-left: 90px; padding-top: 40px; padding-bottom: 10px;">
        <p class="responsive-font" style="margin-left: 20px;">
            Special Offers
        </p>
      <div id="special-offers-container-slider" class="pt-1">
		<div class="container">
			
			<div class="slider">
				<div class="owl-carousel" style="overflow: hidden;">

                    {{#each specialProducts}}
					<div class="slider-card">
						<div class="d-flex justify-content-center align-items-center mb-4">
							<img src="/images/special-product-images/{{this._id}}.{{imageExt}}" alt="">
						</div>
                        <div class="d-flex justify-content-center align-items-center flex-column">
                        <h4 class="mb-1  text-center overflow-hidden"><b>{{this.offer}} off</b></h4>
						<h6 class="mb-1 text-center overflow-hidden"><b>{{this.name}}</b></h6>
                        <h6 class="mb-0 text-center overflow-hidden">Price : <span class="me-2"><s> ₹.{{this.rightPrice}}</s></span> ₹.{{this.currentPrice}}</h6>
						<p class="text-center mx-4 my-3">{{this.description}}</p>
                            <button class="btn text-center mb-2">Check it</button></div>
					</div>

                    {{/each}}
                    
				</div>
			</div>
		</div>
	
      </div>

    </div>
    
</section>
<script>
		// Owlcarousel
		$(document).ready(function () {
			$(".owl-carousel").owlCarousel({
				loop: true,
				margin: 10,
				nav: true,
				autoplay: true,
				autoplayTimeout: 4000,
				autoplayHoverPause: true,
				center: true,
				navText: [
					"<i class='fa fa-angle-left'></i>",
					"<i class='fa fa-angle-right'></i>"
				],
				responsive: {
					0: {
						items: 1
					},
					600: {
						items: 1
					},
					1000: {
						items: 3
					}
				}
			});
		});
	</script>

