                style="display: flex;flex-direction: column; align-items: center; justify-content: center;">
                <div class="card-main">

                    <div class="card-front">
                        <img src="/images/product-images/{{this._id}}.{{imageExt}}" alt="">
                        <span style="font-size: 22px;">&#9733; &#9733; &#9733; &#9734; &#9734;</span>
                        <h5 class="user-home-prod-name" style="overflow: hidden; text-align: center;">{{this.Name}}</h5>
                        <h5>₹.{{this.Price}}</h5>
                    </div>

                </div>
                
                <div class="card-buttons">
                    <button
                            onclick="popupDetails('{{this._id}}')" class="card-button" data-bs-toggle="modal"
                            data-bs-target="#exampleModal"><i class="bi bi-info-square-fill"></i></button>

                    <button class="card-button" onclick="addToCart('{{this._id}}')">Add <i class="fa-solid fa-heart-circle-plus"
                            style="margin-left: 4px;"></i></button>
                    <button class="card-button">Order <i class="fa-solid fa-cart-plus"
