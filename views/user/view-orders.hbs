<section>
    <div class="container-fluid" style="padding-left: 90px;">
        
        <div class="view-orders-container">
            <div class="view-orders-head"><h4>My orders</h4></div>
            {{#each orderDetails}}
            <article class="card">
                <header class="card-header"> <span style="font-weight: 500;">Order placed on</span>  {{this.deliveryDetails.current_date}}</header>
                <div class="card-body">
                    <h6 style="font-size: 14px;">Order ID: {{this.user}}</h6>
                    <article class="card">
                        <div class="card-body row">
                            <div class="col-12 col-md-3 order-details-col-same">
                                <h6><span style="font-weight: 500;">Order Placed:</span><br><span
                                        style="font-weight: 300;">{{this.deliveryDetails.current_date}}</span></h6>
                                <h6><span style="font-weight: 500;">Estimated Date:</span><br><span
                                        style="font-weight: 300;">{{this.deliveryDetails.expected_date}}:{{this.deliveryDetails.expected_time}}</span>
                                </h6>
                            </div>
                            <div class="col-12 col-md-3  order-details-col-same">
                                <h6><span style="font-weight: 500;">Name : </span><span
                                        style="font-weight: 300;">{{this.deliveryDetails.name}}</span>
                                    <br><span style="font-weight: 500;">Email : </span><span
                                        style="font-weight: 300;">{{this.deliveryDetails.email}}</span>
                                    <br><span style="font-weight: 500;">Address : </span><span
                                        style="font-weight: 300;">{{this.deliveryDetails.address}}</span>
                                    <br><span style="font-weight: 500;">Pincode : </span><span
                                        style="font-weight: 300;">{{this.deliveryDetails.pincode}}</span>
                                    <br><span style="font-weight: 500;">Mobile : </span><span
                                        style="font-weight: 300;">{{this.deliveryDetails.phone}}</span>


                                </h6>
                            </div>

                            <div class="col-12 col-md-3  order-details-col-same">
                                <h6><span style="font-weight: 500;">Payment method:</span><br><span
                                        style="font-weight: 300;">{{this.paymentMethod}}</span></h6>
                            </div>


                            <div class="col-12 col-md-3  order-details-col-same">
                                <h6>
                                    <span style="font-weight: 500;">Order summary:</span>
                                    <span style="font-weight: 300;"></span><br>
                                    <span style="font-weight: 500;">Item(s) Subtotal:</span>
                                    <span style="font-weight: 300;"></span><br>
                                    <span style="font-weight: 500;">Shipping:</span>
                                    <span style="font-weight: 300;"></span><br>
                                    <span style="font-weight: 500;">Offer:</span>
                                    <span style="font-weight: 300;"></span><br>
                                    <span style="font-weight: 500;">Grand Total:</span>
                                    <span style="font-weight: 300;">{{this.totalPrice}}</span>
                                </h6>
                            </div>

                        </div>
                    </article>
                    <div class="track">
                        <div class="step active"> <span class="icon"> <i class="fa fa-check"></i> </span> <span
                                class="text">Order confirmed</span> </div>
                        <div class="step active"> <span class="icon"> <i class="fa fa-user"></i> </span> <span
                                class="text"> Picked by courier</span> </div>
                        <div class="step"> <span class="icon"> <i class="fa fa-truck"></i> </span> <span class="text">
                                On the way </span> </div>
                        <div class="step"> <span class="icon"> <i class="fa fa-box"></i> </span> <span
                                class="text">Ready for pickup</span> </div>
                    </div>

                    
                    <hr>

                    <ul class="row">
                        {{#each this.products.product}}
                        <li class="col-lg-4 col-sm-6">
                            <figure class="itemside mb-3">
                                <div class="aside"><img
                                        src="/images/product-images/{{this.itemId}}.{{this.imgExt}}"
                                        class="img-sm"></div>
                                <figcaption class="info align-self-center">
                                    <p class="title">{{this.name}} <br>Price: ₹.{{this.price}}</p>

                                   <button onclick="showOrderProduct('{{this.itemId}}','{{this.quantity}}')"
                                            data-bs-toggle="modal" data-bs-target="#exampleModal__2"
                                            class="order-prod-btn"><i class="fa-solid fa-circle-info"></i>
                                            Show Details</button>
                                </figcaption>
                            </figure>
                        </li>
                        {{/each}}
                    </ul>

                </div>
            </article>

            {{/each}}
            <br>
            <a href="/" class="btn odr-return-btn" data-abc="true"> <i class="fa fa-chevron-left" style="margin-right: 10px;"></i> return to home</a>
        </div>
    </div>
</section>


