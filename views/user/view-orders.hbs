    <!-- Button trigger modal -->


    <!-- Modal -->
    <div class="modal fade" id="exampleModal__2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content" style="background-image: radial-gradient( rgba(255, 235, 241, 0.884),rgb(255, 255, 255) ), url(images/modal-bg.jpg);">
                <div class="modal-header">
                <h1 class="modal-title fs-5"><span id="odr-popup-product-title-2">Modal title</span>
                <p id="odr-popup-product-subtitle-2" style="font-size: 12px;">ordered within 2 hours</p></h1>
                
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-body-l">
                    <img id="modal-image" src="" alt="" style="width: 160px; height: auto;">
                    
                    <div class="modal-ratings" style="margin-bottom: 16px;">
                        <span style="font-size: 18px;">&#9733; &#9733; &#9733; &#9734; &#9734;</span>
                    </div>

                
                </div>
                <div class="modal-body-r">
                    <h5>Name : <span id="odr-popup-product-name"></span></h5>
                    <h5>Price : ₹.<span id="odr-popup-product-price"></span></h5>
                    <h5>Quantity : <span id="odr-popup-product-quant"></span></h5>
                    <h5>Category : <span id="odr-popup-product-categ"></span></h5>
                    <h5>Description : <span id="odr-popup-product-desc"></span></h5>
                    
                    
                </div>
            </div>
            </div>
        </div>
</section>
